<configuration name="sofia.conf" description="sofia Endpoint">
    <global_settings>
        <param name="auth-calls" value="true"/>
        <param name="auth-all-packets" value="true"/>
        <param name="challenge-realm" value="auto_from"/>
        <param name="debug" value="0"/>
        <param name="debug-presence" value="0"/>
        <param name="dialplan" value="XML"/>
        <param name="dtmf-duration" value="2000"/>
        <param name="forward-unsolicited-mwi-notify" value="false"/>
        <param name="inbound-codec-negotiation" value="generous"/>
        <param name="log-auth-failures" value="false"/>
        <param name="log-level" value="0"/>
        <param name="manage-presence" value="false"/>
        <param name="media_hold_timeout" value="1800"/>
        <param name="media_timeout" value="300000"/>
        <param name="nonce-ttl" value="60â€³"/>
        <param name="rfc2833-pt" value="101"/>
        <param name="rtp-timer-name" value="soft"/>
        <param name="tls" value="false"/>
        <param name="user-agent-string" value="Sipgw"/>
    </global_settings>
    <profiles>
        <profile name="external">
            <settings>
                <param name="context" value="public"/>
                <param name="sip-trace" value="yes"/>
                <param name="sip-port" value="5060"/>
                <param name="ext-sip-ip" value="$${external_ip}"/>
                <param name="ext-rtp-ip" value="$${external_ip}"/>
                <param name="local-network-acl" value="none"/>
                <param name="enable-compact-headers" value="true"/>
                <param name="multiple-registrations" value="contact"/>
                <param name="caller-id-type" value="pid"/>
                <param name="inbound-late-negotiation" value="true"/>
                <param name="inherit_codec" value="true"/>
            </settings>

            <domains>
                <domain name="all" alias="false" parse="true"/>
            </domains>
        </profile>
        <profile name="internal">
            <settings>
                <param name="context" value="default"/>
                <param name="sip-trace" value="yes"/>
                <param name="sip-port" value="$${internal_sip_port}"/>
                <param name="sip-ip" value="$${internal_ip}"/>
                <param name="rtp-ip" value="$${internal_ip}"/>
                <param name="local-network-acl" value="rfc1918.auto"/>
            </settings>

            <domains>
                <domain name="all" alias="false" parse="true"/>
            </domains>
        </profile>
    </profiles>
</configuration>
